+package com.example.education;
+
+import android.content.Intent;
+import android.os.Bundle;
+import android.view.View;
+import android.widget.TextView;
+
+import androidx.activity.EdgeToEdge;
+import androidx.appcompat.app.AppCompatActivity;
+import android.text.Html;
+
+import com.google.android.material.button.MaterialButton;
+
+
+public class Welcome_Screen extends AppCompatActivity {
+    public TextView Singup;
+    public MaterialButton login;
+
+    @Override
+    protected void onCreate(Bundle savedInstanceState) {
+        super.onCreate(savedInstanceState);
+        EdgeToEdge.enable(this);
+        setContentView(R.layout.activity_welcome_screen);
+        Singup=findViewById(R.id.signup);
+        login=findViewById(R.id.Login);
+        String htmlText = "Don't have an account? <font color='#274CDE'>Sign up</font>";
+        Singup.setText(Html.fromHtml(htmlText, Html.FROM_HTML_MODE_LEGACY));
+
+        OnLogin(login);
+        OnSignup(Singup);
+    }
+
+    private void OnSignup(TextView singup) {
+        singup.setOnClickListener(new View.OnClickListener() {
+            @Override
+            public void onClick(View v) {
+                Intent intent =new Intent(Welcome_Screen.this , signup.class);
+                startActivity(intent);
+                finish();
+
+            }
+        });
+    }
+
+    private void OnLogin(MaterialButton login) {
+        login.setOnClickListener(new View.OnClickListener() {
+            @Override
+            public void onClick(View v) {
+                Intent intent =new Intent(Welcome_Screen.this , login.class);
+                startActivity(intent);
+                finish();
+            }
+        });
+    }
+}

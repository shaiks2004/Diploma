<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_page"
    android:layout_width="match_parent"
    android:backgroundTint="@color/secondary"
    android:background="@color/secondary"
    android:layout_height="match_parent">

    <!--<include layout="@layout/toolbar"></include>-->
    <LinearLayout
        android:id="@+id/dropdown_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="0dp"
        android:layout_marginTop="23dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/circle_background"
            android:scaleType="centerCrop"
            android:src="@drawable/user1" />

        <TextView
            android:id="@+id/Profile_User"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/dm_regular"
            android:text="HEY, USER"
            android:textColor="@color/thirdary"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="27dp"
            android:layout_height="31dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/outline_circle_notifications_24" />

        <ImageView
            android:id="@+id/message"
            android:layout_width="27dp"
            android:layout_height="31dp"
            android:src="@drawable/ic_action_name" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dropdown_menu"
        android:layout_margin="0dp">


        <LinearLayout
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/slider_home" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Choose Category "
                android:textColor="@color/thirdary"
                android:textColorHighlight="@color/colorPrimary"
                android:textSize="20sp" />

            <include
                android:id="@+id/internship"
                layout="@layout/items_cards" />
            <include
                android:id="@+id/scholorship"
                layout="@layout/items_cards" />

            <include
                android:id="@+id/contest_winner"
                layout="@layout/items_cards" />

            <include
                android:id="@+id/carrier_guidence"
                layout="@layout/items_cards" />

            <include
                android:id="@+id/top_colleges"
                layout="@layout/items_cards" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Recommended for you,"
                android:textColor="@color/thirdary"
                android:textColorHighlight="@color/buttons"
                android:textSize="20sp" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                android:scrollbars="none"
                android:scrollbarSize="0dp"
                android:id="@+id/scrollable">

            <LinearLayout
                android:id="@+id/recomend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <include layout="@layout/item_recomend_card"
                    android:id="@+id/educationloan"
                    />
                <include layout="@layout/item_recomend_card"
                    android:id="@+id/study_tips"
                    />
                <include layout="@layout/item_recomend_card"
                    android:id="@+id/courses"
                    />

            </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>




    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/buttons"
        />



</RelativeLayout>